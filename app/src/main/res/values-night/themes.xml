<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bharathaat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme customizations -->
        <item name="android:windowBackground">@color/white</item> <!-- white is #FF121212 in values-night/colors.xml -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Android 12+ splash screen attributes -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
    </style>

</resources>
