<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Dark Theme Colors.
        Note that `black` and `white` are redefined for dark mode.
        `black` is used for text and is a light color (#DEFFFFFF).
        `white` is used for background and is a dark color (#FF121212).
        Accent colors (purple and teal) are kept the same as the light theme.
    -->
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="black">#DEFFFFFF</color> <!-- 87% white for text -->
    <color name="white">#FF121212</color> <!-- Dark grey for background -->
</resources>
